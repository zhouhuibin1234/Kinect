                </RichTextBox>
                <k:KinectTileButton Content="Go back" Grid.Row="1" Height="75" Width="1200" Margin="50, 0, 50, 0" Click="KTHome" FontSize="48"></k:KinectTileButton>
            </Grid>
            <Grid x:Name="grdTilt" Visibility="Collapsed" Height="600" Width="1300" Background="#FFA020B4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="300"></RowDefinition>
                    <RowDefinition Height="300"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="650"></ColumnDefinition>
                    <ColumnDefinition Width="650"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Row="0" Grid.Column="0" >
                    <k:KinectTileButton x:Name="KTOptionsTiltUp"  Style="{StaticResource ResourceKey=KinectTileButton}" Margin="50,25,0,0" Click="KTOptionsTiltUpClick">
                        <k:KinectTileButton.Background>
                            <ImageBrush ImageSource="Images/TiltUp.png"/>
                        </k:KinectTileButton.Background>

                    </k:KinectTileButton>
                    <TextBlock Text="Kinect is below screen" Margin="25, 25, 0, 0" Style="{StaticResource ResourceKey=TextBlock}"></TextBlock>
                </WrapPanel>
                <WrapPanel Grid.Row="0" Grid.Column="1">
                    <k:KinectTileButton x:Name="KTOtionsTiltDown" Style="{StaticResource ResourceKey=KinectTileButton}" Margin="0,25,0,0" Click="KTOptionsTiltDownClick">
                        <k:KinectTileButton.Background>
                            <ImageBrush ImageSource="Images/TiltDown.png"/>
                        </k:KinectTileButton.Background>

                    </k:KinectTileButton>
                    <TextBlock Text="Kinect is above screen" Margin="25, 25, 0, 0" Style="{StaticResource ResourceKey=TextBlock}"></TextBlock>
                </WrapPanel>

                <WrapPanel Grid.Row="1" Grid.Column="0">
                    <k:KinectTileButton x:Name="KTOptionsTiltCenter" Style="{StaticResource ResourceKey=KinectTileButton}" Margin="50,0,0,0" Click="KTOptionsTiltCenterClick">
                        <k:KinectTileButton.Background>
                            <ImageBrush ImageSource="Images/TiltCenter.png"/>
                        </k:KinectTileButton.Background>

                    </k:KinectTileButton>
                    <TextBlock Text="Level Kinect" Margin="25, 25, 0, 0" Style="{StaticResource ResourceKey=TextBlock}"></TextBlock>
                </WrapPanel>
                <WrapPanel Grid.Row="1" Grid.Column="1" >
                    <k:KinectTileButton x:Name="KTOptionsTilt"  Click="KTHome" Style="{StaticResource ResourceKey=KinectTileButton}" Margin="0,0,0,0">
                        <k:KinectTileButton.Background>
                            <ImageBrush ImageSource="Images/Back.png"/>
                        </k:KinectTileButton.Background>
                    </k:KinectTileButton>
                    <TextBlock Text="Home" Margin="25, 0, 0, 0" Style="{StaticResource ResourceKey=TextBlock}"></TextBlock>
                </WrapPanel>
            </Grid>
            <Grid x:Name="grdOptionsTheme" Visibility="Collapsed" Height="600" Width="1300" Background="#FFA020B4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="300"></RowDefinition>
                    <RowDefinition Height="300"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="650"></ColumnDefinition>
                    <ColumnDefinition Width="650"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Row="0" Grid.Column="0" >
                    <k:KinectTileButton x:Name="KTOptionThemePurp"  Style="{StaticResource ResourceKey=KinectTileButton}" Margin="50,25,0,0" Click="KTOptionsThemePurple">
                        <k:KinectTileButton.Background>
                            <ImageBrush ImageSource="Images/Purple.png"/>
                        </k:KinectTileButton.Background>

                    </k:KinectTileButton>
                    <TextBlock Text="Purple Theme" Margin="25, 25, 0, 0" Style="{StaticResource ResourceKey=TextBlock}"></TextBlock>
                </WrapPanel>
                <WrapPanel Grid.Row="0" Grid.Column="1">
                    <k:KinectTileButton x:Name="KTOptionsThemeBlu" Style="{StaticResource ResourceKey=KinectTileButton}" Margin="0,25,0,0" Click="KTOptionsThemeBlue">
                        <k:KinectTileButton.Background>
                            <ImageBrush ImageSource="Images/Blue.png"/>
                        </k:KinectTileButton.Background>

                    </k:KinectTileButton>
                    <TextBlock Text="Blue Theme" Margin="25, 25, 0, 0" Style="{StaticResource ResourceKey=TextBlock}"></TextBlock>
                </WrapPanel>

                <WrapPanel Grid.Row="1" Grid.Column="0">
                    <k:KinectTileButton x:Name="KTOptionsThemeBlkYel" Style="{StaticResource ResourceKey=KinectTileButton}" Margin="50,0,0,0" Click="KTOptionsThemeYellow">
                        <k:KinectTileButton.Background>
                            <ImageBrush ImageSource="Images/Yellow.png"/>
                        </k:KinectTileButton.Background>

                    </k:KinectTileButton>
                    <TextBlock Text="Yellow/Grey Theme" Margin="25, 25, 0, 0" Style="{StaticResource ResourceKey=TextBlock}"></TextBlock>
